<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientMain">

    <Button
        android:id="@+id/btnPHistory"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginStart="64dp"
        android:text="History"
        android:textSize="18sp"
        app:backgroundTint="#2C0101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnMyDetails"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="My Details"
        android:textSize="18sp"
        app:backgroundTint="#2C0101"
        app:layout_constraintEnd_toEndOf="@+id/btnPHistory"
        app:layout_constraintStart_toStartOf="@+id/btnPHistory"
        app:layout_constraintTop_toBottomOf="@+id/btnPHistory" />

    <Button
        android:id="@+id/btnMeusre"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="Mesure"
        android:textSize="18sp"
        app:backgroundTint="#2C0101"
        app:layout_constraintEnd_toEndOf="@+id/btnMyDetails"
        app:layout_constraintStart_toStartOf="@+id/btnMyDetails"
        app:layout_constraintTop_toBottomOf="@+id/btnMyDetails" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btnPHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unnamed" />
</androidx.constraintlayout.widget.ConstraintLayout>